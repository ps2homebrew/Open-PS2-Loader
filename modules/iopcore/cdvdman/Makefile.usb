IOP_BIN  = cdvdman.irx
IOP_OBJS = cdvdman.o streaming.o ioplib_util.o smsutils.o device-usb.o imports.o exports.o
IOP_OBJS += mass_driver.o
ifeq ($(USE_DEV9),1)
IOP_OBJS += dev9.o
else
ifeq ($(IOPCORE_DEBUG),1)
IOP_OBJS += dev9.o
endif
endif
IOP_LIBS =

IOP_INCS += -I../common
IOP_CFLAGS += -Wall -fno-builtin-printf
IOP_CFLAGS += -DUSB_DRIVER
ifeq ($(USE_DEV9),1)
IOP_CFLAGS += -D__USE_DEV9
else
ifeq ($(IOPCORE_DEBUG),1)
IOP_CFLAGS += -D__USE_DEV9 -D__IOPCORE_DEBUG
endif
endif
ifeq ($(VMC),1)
IOP_CFLAGS += -DVMC_DRIVER
endif
IOP_LDFLAGS += -s

all: $(IOP_BIN)

clean:
	rm -f $(IOP_BIN) $(IOP_OBJS) cdvdman.map

rebuild: clean all

include $(PS2SDK)/Defs.make
include ../../Rules.make
